<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:orientation="horizontal"
 android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:padding="10dp"
  android:weightSum="10">
	 <LinearLayout 
	  android:layout_width="0dp"
	  android:layout_height="fill_parent"
	  android:orientation="vertical"
	  android:layout_weight="7">
		  <TextView android:id="@+id/twListeUrunKod"
		  android:layout_gravity="center"
		  android:textSize="15dp"
		  android:textStyle="bold"
		  android:textColor="#FFFF00"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  
		  android:hint="@string/urunCodeHint"/>
		  <TextView android:id="@+id/twListeUrunIsim"
		  android:textSize="13dp"
		  android:textStyle="bold"
		  android:textColor="#FFFF00"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  
		  android:hint="@string/urunIsmiHint"/>
	 </LinearLayout>
	 <LinearLayout 
	  android:layout_width="0dp"
	  android:layout_height="fill_parent"
	  android:layout_weight="3"
	  android:gravity="center">
		 <TextView android:id="@+id/twListeUrunMiktar"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:hint="miktar"
		  android:gravity="right"/>
		 <TextView android:id="@+id/twListeUrunBirim"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:hint="birim"
		  android:paddingLeft="5dp"/>
	 </LinearLayout>
</LinearLayout>